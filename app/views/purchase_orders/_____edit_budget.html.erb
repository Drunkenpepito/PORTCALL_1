<!--   PO LINES   -->
<%= turbo_frame_tag "po_lines_#{@purchase_order.id}"  do %>

  <div class ="d-flex justify-content-center">
    <table class="table  table table-bordered table-hover border border-light border-2">
      <tbody>
          <% if @po_lines %>
            <%  @po_lines.each do |line| %>
              <%= render 'po_lines/po_line', po_line: line %>
            <% end %>
          <% else %>
          No Budget lines yet  
          <% end %>
      </tbody>
    </table>
  </div>

<% end %>
