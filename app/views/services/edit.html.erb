<%= simple_form_for @service, html: { class: "card" } do |f| %>
  <% if @service.errors.any? %>
    <div class="error-message">
      <%= @service.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
    

  <div class="d-flex"><%= f.input :name,label: false,  input_html: { autofocus: true, class:"m-2" } %>
  </div>
  <%# <div class="container"> %>
    <%= f.input :description,label: false, placeholder: "Service description",  input_html: { autofocus: true ,class:"form1 m-2"} %>
    <%= f.input :agency_fee,  input_html: { autofocus: true ,class:"m-2"} %>

  <%# </div> %>

  <%= f.submit class: "btn btn-outline-primary m-2" %>
<% end %>
<%= button_to "❌ Delete Service", service_path(@service),method: :delete,class: "btn btn-outline-danger" %>
