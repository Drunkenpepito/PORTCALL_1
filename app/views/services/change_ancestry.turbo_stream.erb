

<%= turbo_stream.remove "service_#{@og_service.id}" do %> 
    <%= render "contracts/root_service" , service: @og_service %>
<%end%> 

<%  if @new_parent_service.nil? %>
    <%= turbo_stream.append "contract_services_list#{@og_service.contract.id}" do %> 
        <%= render "contracts/root_service" , service: @og_service %>
    <%end%> 
<% else %>
    <%= turbo_stream.replace "service_#{@new_parent_service.id}" do %> 
         <%= render "contracts/root_service" , service: @new_parent_service %>
    <%end%>         
<% end %>

