<ul>
   <% services.each do |service, children| %>

      <li>
        <%= link_to_unless_current service.name, service_path(service),
        class: "  #{ 'white' if service.ancestry != nil } " %>
        <% if service.calculate %>
         <span><%= link_to service.calculate, service_path(service), class:"text-success" %></span>
       <% end %>
      </li>
        <%= render 'sub_menu_services', services: children if children.present? %>
  <% end %>
</ul>