<div class= "container d-flex justify-content-center m-3">
  <h2 class = " blue m-auto" >CONTRACT <%= @contract.name %> </h2>
  <% if @tax_regimes != nil  %> 
    <span class = " mh-3">
    <% @tax_regimes.each do |tax| %>
      <%= link_to tax.name.upcase ,edit_tax_regime_path(tax), class: "btn1"  %>
    <% end %>
    </span>
  <% end %>
</div>

