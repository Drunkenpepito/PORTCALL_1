<%= turbo_frame_tag "invoice_prices_#{order.id}" do %>
    <% if order.children != [] && order.children.all?{|o| o.invoice_price.is_a? Numeric }  %>
        <%= order.children.sum(&:invoice_price) %>
    <% else %>
        <% if order.calculate.is_a? Numeric  %>
            <%= render "orders/invoice_price", order:@order %>
        <% end %>
    <% end %>
<% end %>