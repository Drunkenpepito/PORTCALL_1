
<%= turbo_frame_tag "budget_prices_#{order.id}" do %>
    <% if order.children != [] && order.children.all?{|o| o.budget_price.is_a? Numeric } %>
        <%= order.children.sum(&:budget_price) %>
    <% else %>
        <% if order.calculate.is_a? Numeric  %>
            <%= render "orders/budget_price", order:order %>
        <% end %>
    <% end %>
<% end %>
